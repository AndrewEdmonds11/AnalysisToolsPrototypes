// Generic configurations for variables
open class Variable {
      name : String = "no_var"
}

class Momentum extends Variable {
      name = "momentum"
}

class Time extends Variable {
      name = "time"
}

// Generic configurations for cuts
open class Cut {
      variable : Variable
      comparator : String = "noOp"
      value : Float = 0.0
}

class TimeCut extends Cut {
      variable : Time
}

class MomCut extends Cut {
      variable : Momentum
}

// Generic configurations for hists
open class Hist {
      name : String = "default_name"
      title : String = "default_title"
      min_x : Float = 0.0
      max_x : Float(this>min_x) = 0.0
      bin_width : Float(this>0) = 0.0
      variable : Variable
}

class MomHist extends Hist {
      min_x = 90.0
      max_x = 110.0
      bin_width = 0.5
      variable : Momentum
      cut : Cut
}

class TimeHist extends Hist {
      min_x = 0.0
      max_x = 1700.0
      bin_width = 10.0
      variable : Time
      cut : Cut
}

// Configure the histograms we want
n_hists = 5
hidden i_hists = IntSeq(0, n_hists-1) // "hidden" because IntSeq cannot be interpreted by JSON
hists {
  new MomHist {
      name = "hRecoMom"
      title = "Reco Mom (no cuts)"
  }
  for (i_hist in i_hists) {
      new MomHist {
      	cut  = new TimeCut { comparator = ">" value = 500.0 + i_hist*100.0 }
        name = "hRecoMom_gt"+cut.value.toInt().toString()+"ns"
	title = "Reco Mom (t " + cut.comparator + " "+cut.value.toInt().toString()+" ns)"
      }
      new MomHist {
      	cut = new TimeCut { comparator = "<" value = 500.0 + i_hist*100.0 }
        name = "hRecoMom_lt"+cut.value.toInt().toString()+"ns"
	title = "Reco Mom (t " + cut.comparator + " "+cut.value.toInt().toString()+" ns)"
      }
      new MomHist {
      	cut  = new MomCut { comparator = ">" value = 98.0 + i_hist }
        name = "hRecoMom_gt"+cut.value.toInt().toString()+"MeV"
	title = "Reco Mom (p " + cut.comparator + " "+cut.value.toInt().toString()+" MeV)"
      }
  }

  new TimeHist {
      name = "hTime"
      title = "Time (no cuts)"
  }

  for (i_hist in i_hists) {
      new TimeHist {
      	cut = new MomCut { comparator = ">" value = 95.0 + i_hist }
        name = "hTime_gt"+cut.value.toInt().toString()+"MeV"
	title = "Reco Mom (p " + cut.comparator + " "+cut.value.toInt().toString()+" MeV/c)"
      }
      new TimeHist {
      	cut = new MomCut { comparator = "<" value = 95.0 + i_hist }
        name = "hTime_lt"+cut.value.toInt().toString()+"MeV"
	title = "Reco Mom (p " + cut.comparator + " "+cut.value.toInt().toString()+" MeV/c)"
      }
  }
}